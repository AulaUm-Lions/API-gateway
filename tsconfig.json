{
  "compilerOptions": {
    /* === Padrões modernos === */
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],

    /* === Estrutura === */
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",

    /* === Resolução e interoperabilidade === */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /* === Tipagem e consistência === */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* === Geração de declarações === */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* === Tipos globais === */
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],

    /* === Alias para imports curtos === */
    "paths": {
      "@/*": ["*"]
    },

    /* === Performance === */
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
